{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": [
      "."
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
  },
  "include": [
    "src/**/*"
  ]
}